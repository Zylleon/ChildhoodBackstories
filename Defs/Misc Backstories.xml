<?xml version="1.0" encoding="utf-8"?>
<Defs>


<!-- fear of fire -->
	<ZCB.ZCBackstoryDef>
		<defName>ZCB_ChildBurnVictim</defName>
		<title>burn victim</title>
		<titleShort>burned</titleShort>
		<baseDesc>After being terribly burned as a child, [PAWN_nameDef] developed a life-long fear of fire.</baseDesc>
		<slot>Childhood</slot>
		<spawnCategories>
			<li>ZCB</li> 
		</spawnCategories>
		<requiredRecords>
			<li>
				<name>TimeOnFire</name>
				<minValue>30000</minValue>
			</li>
		</requiredRecords>
		<skillGains>
			<li>
				<key>Medicine</key>
				<value>2</value>
			</li>
		</skillGains>
		<workDisables>
			<li>Firefighting</li>
		</workDisables>
	</ZCB.ZCBackstoryDef>
	

<!-- lost child -->
	<ZCB.ZCBackstoryDef>
		<defName>ZCB_LostChild</defName>
		<title>lost boy</title>
		<titleFemale>lost girl</titleFemale>
		<titleShort>lost</titleShort>
		<baseDesc>Much of [PAWN_possessive] early childhood is a mystery, but [PAWN_nameDef] came of age in our colony.</baseDesc>
		<slot>Childhood</slot>
		<spawnCategories>
			<li>ZCB</li> 
		</spawnCategories>
		<requiredRecords>
			<li>
				<name>TimeAsColonistOrColonyAnimal</name>
				<maxValue>3000000</maxValue>		<!-- one year -->
			</li>
		</requiredRecords>
		<skillGains>
			<li>
				<key>Cooking</key>
				<value>1</value>
			</li>
			<li>
				<key>Melee</key>
				<value>2</value>
			</li>
			<li>
				<key>Crafting</key>
				<value>2</value>
			</li>
			<li>
				<key>Plants</key>
				<value>-2</value>
			</li>
		</skillGains>
	</ZCB.ZCBackstoryDef>


<!-- juvenile delinquent -->
	<ZCB.ZCBackstoryDef>
		<defName>ZCB_JuvenileDelinquent</defName>
		<title>juvenile delinquent</title>
		<titleShort>delinquent</titleShort>
		<baseDesc>[PAWN_nameDef] has a troubled childhood. Frequently on the wrong side of the law, [PAWN_pronoun] spent a lot of time in jail.</baseDesc>
		<slot>Childhood</slot>
		<spawnCategories>
			<li>ZCB</li> 
		</spawnCategories>
		<recordRatios>
			<li>		<!-- spent at least 10% of their time in prison -->
				<bigRecord>TimeAsColonistOrColonyAnimal</bigRecord>
				<smallRecord>TimeAsPrisoner</smallRecord>
				<ratio>0.1</ratio>
			</li>
		</recordRatios>
		<skillGains>
			<li>
				<key>Melee</key>
				<value>2</value>
			</li>
			<li>
				<key>Social</key>
				<value>2</value>
			</li>
			<li>
				<key>Artistic</key>
				<value>2</value>
			</li>
		</skillGains>
		<workDisables>
			<li>Intellectual</li>
		</workDisables>
	</ZCB.ZCBackstoryDef>

</Defs>