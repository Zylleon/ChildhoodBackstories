			<li>ZCB</li> 
		</spawnCategories>
		<commonality>100</commonality>		<!-- this should almost always be picked when the child qualifies -->
		<colonySize>1~1</colonySize>
		<skillGains>		<!-- gains in most skills, loss in social -->
			<li>
				<key>Medicine</key>
				<value>2</value>
			</li>
			<li>
				<key>Social</key>
				<value>-3</value>
			</li>
			<li>
				<key>Intellectual</key>
				<value>1</value>
			</li>
			<li>
				<key>Crafting</key>
				<value>3</value>
			</li>
			<li>
				<key>Animals</key>
				<value>1</value>
			</li>
			<li>
				<key>Plants</key>
				<value>3</value>
			</li>
			<li>
				<key>Cooking</key>
				<value>2</value>
			</li>
			<li>
				<key>Mining</key>
				<value>1</value>
			</li>
			<li>
				<key>Construction</key>
				<value>3</value>
			</li>
			<li>
				<key>Shooting</key>
				<value>2</value>
			</li>
			<li>
				<key>Melee</key>
				<value>2</value>
			</li>
		</skillGains>
	</ZCB.ZCBackstoryDef>


<!-- serial killer -->
	<ZCB.ZCBackstoryDef>
		<defName>ZCB_SerialKiller</defName>
		<title>serial killer</title>
		<titleShort>killer</titleShort>
		<baseDesc>[PAWN_nameDef] spent [PAWN_possessive] childhood learning how to take people apart. [PAWN_possessive] never learned how to put them back together.</baseDesc>
		<slot>Childhood</slot>
		<spawnCategories>
			<li>ZCB</li> 
		</spawnCategories>
		<commonality>5</commonality>
		<requiredRecords>
			<li>
				<name>KillsHumanlikes</name>
				<minValue>5</minValue>
			</li>
			<li>
				<name>TimesTendedOther</name>
				<maxValue>5</maxValue>
			</li>
		</requiredRecords>
		<skillGains>
			<li>
				<key>Melee</key>
				<value>5</value>
			</li>
			<li>
				<key>Social</key>
				<value>3</value>
			</li>
		</skillGains>
		<workDisables>
			<li>Caring</li>
		</workDisables>
	</ZCB.ZCBackstoryDef>


<!-- war orphan -->
<ZCB.ZCBackstoryDef>
		<defName>ZCB_WarOrphan</defName>
		<title>war orphan</title>
		<titleShort>orphan</titleShort>
		<baseDesc>After losing both parents, [PAWN_nameDef] was frequently forced defend [PAWN_objective]self. [PAWN_pronoun] withdrew from society, finding solace in art.</baseDesc>
		<slot>Childhood</slot>
		<spawnCategories>
			<li>ZCB</li> 							
		</spawnCategories>
		
		<commonality>10</commonality>
		<father>Dead</father>
		<mother>Dead</mother>

		<requiredRecords>
			<li>
				<name>TimeDrafted</name>
				<minValue>30000</minValue>			<!-- half a day -->
			</li>
		</requiredRecords>	

		<skillGains>
			<li>
				<key>Shooting</key>
				<value>2</value>
			</li>
			<li>
				<key>Melee</key>
				<value>4</value>
			</li>
			<li>
				<key>Artistic</key>
				<value>3</value>
			</li>
			<li>
				<key>Crafting</key>
				<value>1</value>
			</li>
		</skillGains>
		<workDisables>
			<li>Social</li>
			<li>Animals</li>
		</workDisables>
	</ZCB.ZCBackstoryDef>


<!-- happy go lucky -->
	<ZCB.ZCBackstoryDef>
		<defName>ZCB_HappyGoLucky</defName>
		<title>happy go lucky</title>
		<titleShort>happy</titleShort>
		<baseDesc>[PAWN_nameDef] was a happy go lucky child. [PAWN_possessive] childhood had little strife, and [PAWN_pronoun] spent [PAWN_possessive] time daydreaming and drawing.</baseDesc>
		<slot>Childhood</slot>
		<spawnCategories>
			<li>ZCB</li> 							<!-- required -->
		</spawnCategories>
		<!-- new tags start here -->
		<commonality>2</commonality>
		<father>Present</father>
		<mother>Present</mother>
		<colonySize>1~99</colonySize>
		<requiredRecords>
			<li>	<!-- max 6 hours spent drafted -->
				<name>TimeDrafted</name>
				<maxValue>15000</maxValue>
			</li>
			<li>		
