<!-- serial killer -->
	<ZCB.ZCBackstoryDef>
		<defName>ZCB_SerialKiller</defName>
		<title>serial killer</title>
		<titleShort>killer</titleShort>
		<baseDesc>[PAWN_nameDef] spent [PAWN_possessive] childhood learning how to take people apart. [PAWN_possessive] never learned how to put them back together.</baseDesc>
		<slot>Childhood</slot>
		<spawnCategories>
			<li>ZCB</li> 
		</spawnCategories>
		<requiredRecords>
			<li>
				<name>KillsHumanlikes</name>
				<minValue>5</minValue>
			</li>
			<li>
				<name>TimesTendedOther</name>
				<maxValue>5</maxValue>
			</li>
		</requiredRecords>
		<skillGains>
			<li>
				<key>Melee</key>
				<value>5</value>
			</li>
			<li>
				<key>Social</key>
				<value>3</value>
			</li>
		</skillGains>
		<workDisables>
			<li>Caring</li>
		</workDisables>
	</ZCB.ZCBackstoryDef>


<!-- war orphan -->
