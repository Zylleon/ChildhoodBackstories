<?xml version="1.0" encoding="utf-8"?>
<Defs>


<!-- shaman's apprentice -->
	<ZCB.ZCBackstoryDef parentName="ZCB_TribalChild">
		<defName>ZCB_ShamanApprentice</defName>
		<title>shaman's apprentice</title>
		<titleShort>shaman</titleShort>
		<baseDesc>[PAWN_pronoun] learned to care for all living things - including doing what's necessary to maintain the balance.</baseDesc>
		<slot>Childhood</slot>
		<spawnCategories>
			<li>ZCB</li> 
			<li>ZCB_NaturalMeditation</li>
		</spawnCategories>
		<maxTechLevel>Neolithic</maxTechLevel>
		<colonySize>4~999</colonySize>
		<requiredSkills>
			<li>
				<name>Medicine</name>
				<minValue>6</minValue>
			</li>
			<li>
				<name>Plants</name>
				<minValue>6</minValue>
			</li>
		</requiredSkills>
		<requiredPassions>
			<li>Medicine</li>
		</requiredPassions>
		<skillGains>
			<li>
				<key>Medicine</key>
				<value>3</value>
			</li>
			<li>
				<key>Plants</key>
				<value>4</value>
			</li>
			<li>
				<key>Melee</key>
				<value>2</value>
			</li>
			<li>
				<key>Construction</key>
				<value>-4</value>
			</li>
			<li>
				<key>Mining</key>
				<value>-2</value>
			</li>
		</skillGains>
	</ZCB.ZCBackstoryDef>


<!-- hunter -->
	<ZCB.ZCBackstoryDef>
		<defName>ZCB_TribalHunter</defName>
		<title>tribal hunter</title>
		<titleShort>hunter</titleShort>
		<baseDesc>[PAWN_nameDef] wasn't very skilled with a bow, but [PAWN_pronoun] still managed to successfully hunt, helping feed [PAWN_possessive] tribe.</baseDesc>
		<slot>Childhood</slot>
		<spawnCategories>
			<li>ZCB</li> 							<!-- required -->
			<li>ZCB_NaturalMeditation</li> 			<!-- enables natural meditation focus -->
		</spawnCategories>
		
		<!-- new tags start here -->
		<maxTechLevel>Neolithic</maxTechLevel>
		<requiredRecords>
			<li>		<!-- spent at least 1 day hunting -->
				<name>TimeHunting</name>
				<minValue>60000</minValue>
			</li>
			<li>
				<name>KillsAnimals</name>
				<minValue>5</minValue>
			</li>
		</requiredRecords>
		<requiredSkills>
			<li>
				<name>Shooting</name>
				<maxValue>6</maxValue>
			</li>
		</requiredSkills>
		
		<!-- new tags end here-->
		<skillGains>
			<li>
				<key>Shooting</key>
				<value>3</value>
			</li>
			<li>
				<key>Animals</key>
				<value>2</value>
			</li>
		</skillGains>
	</ZCB.ZCBackstoryDef>


