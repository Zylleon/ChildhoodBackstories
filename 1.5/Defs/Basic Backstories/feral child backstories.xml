<?xml version="1.0" encoding="utf-8"?>
<Defs>


<!--

Backstories for feral/wild children.
Most of these should enable natural meditation focus.

-->

<!-- feral child -->
	<ZCB.ZCBackstoryDef>
		<defName>ZCB_FeralChild</defName>
		<title>feral child</title>
		<titleShort>feral</titleShort>
		<baseDesc>[PAWN_nameDef] was left to survive on [PAWN_possessive] own after some trauma that [PAWN_pronoun] refuses to talk about. [PAWN_pronoun] learned to appreciate the nature that protected and cared for [PAWN_objective].</baseDesc>
		<slot>Childhood</slot>
		<spawnCategories>
			<li>ZCB</li> 							<!-- required -->
			<li>ZCB_NaturalMeditation</li> 			<!-- enables natural meditation focus -->
		</spawnCategories>
		
		<!-- new tags start here -->
		<commonality>3</commonality>
		<requiredRecords>
			<li>		<!-- at least 3 hours as feral child -->
				<name>ZCB_TimeAsWildMan</name>
				<minValue>7500</minValue>
			</li>
		</requiredRecords>
		<!-- new tags end here-->
		
		<skillGains>
				<Plants>5</Plants>
				<Animals>3</Animals>
				<Melee>2</Melee>
				<Cooking>-2</Cooking>
		</skillGains>
		<workDisables>
			<li>Social</li>
			<li>Intellectual</li>
		</workDisables>
	</ZCB.ZCBackstoryDef>


<!-- raised by muffalo  -->
	<ZCB.ZCBackstoryDef>
		<defName>ZCB_FeralChild2</defName>
		<title>feral child</title>
		<titleShort>feral</titleShort>
		<baseDesc>Abandoned by [PAWN_possessive] parents at an early age, [PAWN_nameDef] was raised by a herd of friendly muffalo. [PAWN_pronoun] cared for the herd, fighting off predators and tending to minor wounds.</baseDesc>
		<slot>Childhood</slot>
		<spawnCategories>
			<li>ZCB</li> 							<!-- required -->
			<li>ZCB_NaturalMeditation</li> 			<!-- enables natural meditation focus -->
		</spawnCategories>
		
		<!-- new tags start here -->
		<commonality>2</commonality>
		<requiredRecords>
			<li>		<!-- at least 3 hours as feral child -->
				<name>ZCB_TimeAsWildMan</name>
				<minValue>7500</minValue>
			</li>
		</requiredRecords>
		<requiredPassions>
			<li>Animals</li>
		</requiredPassions>
		<!-- new tags end here-->
		
		<skillGains>
				<Animals>4</Animals>
				<Melee>3</Melee>
				<Medicine>2</Medicine>
		</skillGains>
	</ZCB.ZCBackstoryDef>


<!-- wild child -->
	<ZCB.ZCBackstoryDef>
		<defName>ZCB_WildChild</defName>
		<title>wild child</title>
		<titleShort>wild</titleShort>
		<baseDesc>[PAWN_nameDef] survived alone in the wilderness for years before being adopted into [PAWN_factionName]. [PAWN_pronoun] missed having company, and became very outgoing after finding [PAWN_possessive] new family.</baseDesc>
		<slot>Childhood</slot>
		<spawnCategories>
			<li>ZCB</li> 							<!-- required -->
			<li>ZCB_NaturalMeditation</li> 			<!-- enables natural meditation focus -->
		</spawnCategories>
		
		<!-- new tags start here -->
		<commonality>7</commonality>
		<requiredRecords>
			<li>		<!-- at least 3 hours as feral child -->
				<name>ZCB_TimeAsWildMan</name>
				<minValue>7500</minValue>
			</li>
		</requiredRecords>
		<requiredPassions>
			<li>Social</li>
		</requiredPassions>
		<!-- new tags end here-->
		<skillGains>
				<Plants>3</Plants>
				<Social>4</Social>
		</skillGains>
	</ZCB.ZCBackstoryDef>

  
</Defs>